<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title : "
        android:id="@+id/textView14"
        android:layout_marginTop="87dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#e94ef1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Updated on:"
        android:id="@+id/textView16"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="title_field"
        android:id="@+id/title_textView"
        android:layout_above="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColorLink="#e91616"
        android:textColor="#df4e4e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="updated"
        android:id="@+id/updated_textView"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignLeft="@+id/title_textView"
        android:layout_alignStart="@+id/title_textView"
        android:textStyle="bold" />
</RelativeLayout>